<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:src="@drawable/menubtnb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Post Job"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Job For Job seekers"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="Job Type"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/postjobnameinput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputbackc"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Job Date"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/postjobjobdtaeinput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputbackc"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/postjoblocationinput"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputbackc"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="Payment Method"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/postpaymentmethodinput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputbackc"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:text="Job Period"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/postjobperiodinput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputbackc"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Job"
            android:backgroundTint="#061981"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"/>





    </LinearLayout>
</RelativeLayout>
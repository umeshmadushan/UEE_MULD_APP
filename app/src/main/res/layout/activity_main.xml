<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp"
            android:fontFamily="sans-serif"
            android:text="MULD"
            android:textAlignment="center"
            android:textColor="#08155E"
            android:textSize="45dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="APP"
            android:textAlignment="center"
            android:textColor="#8B2B9C"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif"
            android:text="Choose
            How To Continue"
            android:textAlignment="textStart"
            android:textColor="#08155E"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/cardbg">

                    <ImageView
                        android:id="@+id/clientbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/client" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Join As Client"
                    android:textAlignment="center"
                    android:textColor="#051361"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Find, Hire and Rate Profetions"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/cardbg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/pro" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="30dp"
                    android:text="Join As A Pro"
                    android:textAlignment="center"
                    android:textColor="#051361"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Reviews and Find Job Offers"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/edLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have an Account.. ? Login Now"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </LinearLayout>

</RelativeLayout>